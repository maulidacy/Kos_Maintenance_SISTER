datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
  TEKNISI
}

enum KategoriLaporan {
  AIR
  LISTRIK
  WIFI
  KEBERSIHAN
  FASILITAS_UMUM
  LAINNYA
}

enum PrioritasLaporan {
  RENDAH
  SEDANG
  TINGGI
}

enum StatusLaporan {
  BARU
  DIPROSES
  DIKERJAKAN
  SELESAI
  DITOLAK
}

enum LaporanEventType {
  REPORTED
  RECEIVED
  ASSIGNED
  STARTED
  RESOLVED
  STATUS_CHANGED
}

model User {
  id           String   @id @default(uuid())
  namaLengkap  String
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  nomorKamar   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  laporan            LaporanFasilitas[] @relation("LaporanByUser")
  assignedLaporan    LaporanFasilitas[] @relation("LaporanAssignedToTeknisi")
  events             LaporanEvent[]
}

model LaporanFasilitas {
  id         String           @id @default(uuid())
  user       User             @relation("LaporanByUser", fields: [userId], references: [id])
  userId     String

  kategori   KategoriLaporan
  judul      String
  deskripsi  String
  fotoUrl    String?
  prioritas  PrioritasLaporan @default(SEDANG)
  status     StatusLaporan    @default(BARU)
  lokasi     String

  // tambahan (optional, jadi tidak merusak data lama)
  receivedAt   DateTime?
  startedAt    DateTime?
  resolvedAt   DateTime?

  // assign teknisi (optional)
  assignedTo     User?   @relation("LaporanAssignedToTeknisi", fields: [assignedToId], references: [id])
  assignedToId   String?

  // timeline/audit log
  events      LaporanEvent[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model LaporanEvent {
  id        String          @id @default(uuid())
  laporan   LaporanFasilitas @relation(fields: [laporanId], references: [id], onDelete: Cascade)
  laporanId String

  actor     User            @relation(fields: [actorId], references: [id])
  actorId   String

  type      LaporanEventType
  note      String?
  at        DateTime        @default(now())
}
